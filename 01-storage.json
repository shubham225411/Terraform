{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS", // we can also use expression like "defaultValue": "[resourceGroup().location]"
      "allowedValues": [
        "Premium_LRS",
        "Premium_ZRS",
        "Standard_GRS",
        "Standard_GZRS",
        "Standard_LRS",
        "Standard_RAGRS",
        "Standard_RAGZRS",
        "Standard_ZRS"
      ],
      "metadata": {
        "description": "Storage Account type"
      }
    },
        "storageAccountName": {
      "type": "string",
      "defaultValue": "acount-demo",
      "metadata": {
        "description": "The name of the storage account"
      },
      "minLength":3,
      "maxLength":24

      }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[parameters('storageAccountName')]", // name of the storage account
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-04-01",
            "tags": {
                "displayName": "storageaccount1"
            },
            "location": "[resourceGroup().location]", // location will be same as of the resource group
            "kind": "StorageV2",
            "sku": {
                "name": "Premium_LRS",
                "tier": "Premium"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2022-09-01", // these api versions are very important. different api version has 
            // different templates keywords which we can see on azure official documentation.
            "name":"my-storage",
            "kind": "StorageV2",
            "location":"[resourceGroup().location]",
            "sku": {
                "name": "[parameters('storageAccountType')]",
                "tier": "Standard"

            }
            
        }
    ],
    "outputs": {}
}